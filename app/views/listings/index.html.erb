<h1>works!</h1>

<%= form_with url: listings_path, method: "get", local: true do |form| %>
<%= form.label :search %>
<%= form.text_field :search %>
<%= form.submit "Search" %>
<% end %>

<div class="listings">
    <% @listings.each do |listing| %>
        <div class="listings">
            <h3><%= link_to listing.title, listing_path(listing) %></h3>
            <% if listing.pic.attached? %>
                <p><%= image_tag listing.pic %></p>
            <% else %>
                <p><%= image_tag "listingdefault.jpeg" %></p>
            <% end%>
                <p><%= listing.name %></p>
                <p><%= listing.description %></p>
                    <ul class="listing-actions">
                        <li><%= link_to "View Exhibit", listing_path(listing) %></li>
                        <li><%= link_to "Edit Exhibit", edit_listing_path(listing) %></li>
                    </ul>
        </div>
    <% end %>
</div>

