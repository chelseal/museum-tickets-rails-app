<section class="search-bar">
<%= form_with url: listings_path, method: "get", local: true do |form| %>
<%= form.label :search %>
<%= form.text_field :search %>
<%= form.submit "Search" %>
<% end %>

<div>
    <% @listings.each do |listing| %>
        <div>
            <h3 class="museum-headings"><%= link_to listing.title, listing_path(listing) %></h3>
            <%= link_to listing do %>
                <% if listing.pic.attached? %>
                    <p><%= image_tag listing.pic %></p>
                <% else %>
                    <p><%= image_tag "listingdefault.jpeg" %></p>
                <% end%>
            <% end %>
                <p class="museum-headings"><%= listing.name %></p>
                <p class="museum-p"><%= listing.description %></p>
                    <ul>
                        <li class="button"><%= link_to "View Exhibit", listing_path(listing) %></li>
                    </ul>
        </div>
    <% end %>
</div>

