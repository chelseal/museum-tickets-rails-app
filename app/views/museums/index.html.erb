<section class="search-bar">
    <%= form_with url: museums_path, method: "get", local: true do |form| %>
    <%= form.label :search %>
    <%= form.text_field :search %>
    <%= form.submit "Search" %>
    <% end %>
</section>

    <div>
        <% @museums.each do |museum| %>
            <div>
                <%= link_to museum do %>
                    <% if museum.pic.attached? %>
                        <p><%= image_tag museum.pic %></p>
                    <% else %>
                        <p><%= image_tag "museumdefault.jpeg" %></p>
                    <% end%>
                <% end %>
                    <h3 class="museum-headings"><%= link_to museum.name, museum_path(museum) %></h3>
                        <p class="museum-p"><%= museum.description %></p>
                        <p class="museum-p"><%= museum.opening_time.strftime("%I:%M %p") %></p>
                        <p class="museum-p"><%= museum.closing_time.strftime("%I:%M %p") %></p>
                            <ul>
                                <li class="button"><%= link_to "View Exhibits", museum_path(museum) + "#view-exhibits"%></li>
                            </ul>
            </div>
        <% end %>
    </div>
</main>